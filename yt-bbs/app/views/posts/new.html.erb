<h1>新しい投稿</h1>

<%= form_with model: @post ,html: {class: "form-containter"}  do |form| %>
  <div class="form-input" >
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="form-input">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
 <div class="button-containter" > <%=form.submit "投稿" ,class: "link-button" %></div>
<% end %>
